##############################

/var/log/node_exporter/*.log
{
    #
    su node_exporter node_exporter
    daily
    missingok
    rotate 31   
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    minsize 1M
    #
    create 755 node_exporter node_exporter
    #
    postrotate
        systemctl restart node_exporter > /dev/null
    endscript
    #
}