#                            #
# Ansible / Tower managed on #
#                            #
##############################

/var/log/redis/redis-server**.log
{
    #
    su redis redis
    daily
    missingok
    rotate 31
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    minsize 1M
    #
    create 755 redis redis
    #
    postrotate
        systemctl restart redis > /dev/null
    endscript
    #
}